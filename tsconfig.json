{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "Node",
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src"],
  "exclude": [
    "src/__tests__",
    "src/setupTests.ts",
    "**/*.test.*",
    "**/*.spec.*",
    "dist",
    "node_modules"
  ]
}
