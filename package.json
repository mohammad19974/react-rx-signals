{
  "name": "react-rx-signals",
  "version": "2.0.2",
  "description": "SolidJS-style signals and stores for React using RxJS",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*.js",
    "dist/*.d.ts",
    "README.md"
  ],
  "sideEffects": false,
  "author": "Mohamed AlJamil",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mohammad19974/react-rx-signals.git"
  },
  "homepage": "https://github.com/mohammad19974/react-rx-signals",
  "keywords": [
    "react",
    "rxjs",
    "signals",
    "store",
    "solidjs"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "prepublishOnly": "npm run build",
    "version:patch": "npm version patch && npm publish",
    "version:minor": "npm version minor && npm publish",
    "version:major": "npm version major && npm publish",
    "release": "npm run version:patch",
    "prepare": "husky"
  },
  "dependencies": {
    "rxjs": "^7.8.1",
    "use-sync-external-store": "^1.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^12.1.5",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/use-sync-external-store": "^0.0.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.2.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "react": ">=17.0.0"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
